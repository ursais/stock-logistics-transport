<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tms_fuel_view_form" model="ir.ui.view">
        <field name="name">tms.fuel.view.form</field>
        <field name="model">tms.fuel</field>
        <field name="inherit_id" ref="tms.tms_fuel_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="price_unit_ieps" string="Unit Price" attrs="{'invisible': [('partner_country_code', '!=', 'MX')]}" widget="monetary" options="{'currency_field': 'currency_id'}" />
                <field name="amount_untaxed_ieps" string="Untaxed Amount" attrs="{'invisible': [('partner_country_code', '!=', 'MX')]}" />
            </xpath>
            <xpath expr="//field[@name='tax_amount']" position="after">
                <field name="tax_amount_ieps" string="Tax Amount" attrs="{'invisible': [('partner_country_code', '!=', 'MX')]}" />
                <field name="amount_ieps" attrs="{'invisible': [('partner_country_code', '!=', 'MX')]}" />
                <field name="amount_total_ieps" string="Total Amount" attrs="{'invisible': [('partner_country_code', '!=', 'MX')]}" />
                <field name="partner_country_code" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='tax_amount']" position="attributes">
                <attribute name="attrs">{'invisible': [('partner_country_code', '=', 'MX')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'invisible': [('partner_country_code', '=', 'MX')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                <attribute name="attrs">{'invisible': [('partner_country_code', '=', 'MX')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="attributes">
                <attribute name="attrs">{'invisible': [('partner_country_code', '=', 'MX')]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
