<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tms_agreement_wizard_view_form" model="ir.ui.view">
        <field name="name">tms.agreement.wizard.view.form</field>
        <field name="model">tms.agreement.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="kit_id" options="{'no_create': 1}" />
                        <field name="driver_id" options="{'no_create': 1}" />
                        <field name="unit_id" options="{'no_create': 1}" />
                        <field
                            name="trailer1_id"
                            options="{'no_create': 1}"
                            attrs="{'required':['|', ('dolly_id','!=',False),('trailer2_id','!=',False)]}"
                            domain="[('id','!=',trailer2_id)]"
                        />
                        <field
                            name="dolly_id"
                            options="{'no_create': 1}"
                            attrs="{'required':[('trailer2_id','!=',False)]}"
                        />
                        <field
                            name="trailer2_id"
                            options="{'no_create': 1}"
                            attrs="{'required':[('dolly_id','!=',False)]}"
                            domain="[('id','!=',trailer1_id)]"
                        />
                    </group>
                    <group>
                        <field name="date_start" />
                    </group>
                </group>
                <footer>
                    <button
                        name="action_create_documents"
                        string="Create Documents"
                        type="object"
                        class="oe_highlight"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
