<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_move_tms_form" model="ir.ui.view">
        <field name="name">Invoice for TMS</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_open_waybill"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-bars"
                    string="Waybill"
                    invisible="not waybill_id"
                />
                <button
                    name="action_open_travel"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-truck"
                    string="Travel"
                    invisible="not travel_id"
                />
                <field name="waybill_id" invisible="1" />
                <field name="travel_id" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
