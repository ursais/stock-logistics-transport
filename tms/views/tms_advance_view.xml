<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_tms_advance_search" model="ir.ui.view">
        <field name="name">tms.advance.search</field>
        <field name="model">tms.advance</field>
        <field name="arch" type="xml">
            <search string="Advances">
                <field name="date" />
                <field name="name" />
                <field name="driver_id" />
                <field name="state" />
                <filter name="draft" domain="[('state','=','draft')]" string="Draft" />
                <filter name="confirmed" domain="[('state','=','confirmed')]" string="Confirmed" />
                <filter name="closed" domain="[('state','=','closed')]" string="Closed" />
                <separator />
                <filter name="cancelled" domain="[('state','=','cancel')]" string="Cancelled" />
                <filter name="not_paid" string="Unpaid" domain="[('payment_state', 'in', ('not_paid', 'partial'))]" />
                <filter name="paid" string="Paid" domain="[('payment_state', 'in', ('in_payment', 'paid'))]" />
                <separator />
                <filter name="travel" context="{'group_by': 'travel_id'}" string="Travel" />
                <filter name="unit" context="{'group_by': 'unit_id'}" string="Unit" />
                <filter name="driver" context="{'group_by': 'driver_id'}" string="Driver" />
                <filter name="state" context="{'group_by': 'state'}" string="State" />
                <separator />
                <filter
                    domain="[('date','&gt;=', time.strftime('%Y-%m-01'))]"
                    string="From this month"
                    name="this_month"
                />
                <filter name="day" context="{'group_by': 'date:day'}" string="Day" />
                <filter name="month" context="{'group_by': 'date:month'}" string="Month" />
            </search>
        </field>
    </record>
    <record id="view_tms_advance_tree" model="ir.ui.view">
        <field name="name">tms.advance.tree</field>
        <field name="model">tms.advance</field>
        <field name="arch" type="xml">
            <tree
                decoration-muted="state=='closed'"
                decoration-success="state=='confirmed'"
                decoration-info="state=='done'"
                decoration-danger="state=='cancel'"
            >
                <header>
                    <button name="action_register_payment" string="Register Payment" type="object" />
                </header>
                <field name="name" />
                <field name="date" />
                <field name="travel_id" />
                <field name="unit_id" optional="show" />
                <field name="driver_id" widget="" optional="show" />
                <field name="currency_id" optional="hide" />
                <field name="amount" sum="Amount Total" />
                <field name="amount_residual" sum="Amount Remaining" optional="hide" />
                <field name="product_id" />
                <field name="auto_expense" widget="boolean_toggle" attrs="{'readonly':[('state', '!=', 'draft')]}" />
                <field
                    name="payment_state"
                    widget="badge"
                    decoration-danger="payment_state == 'not_paid'"
                    decoration-warning="payment_state == 'partial'"
                    decoration-success="payment_state == 'paid'"
                    optional="show"
                />
                <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'confirmed'"
                    decoration-muted="state == 'done'"
                    decoration-warning="state == 'closed'"
                    decoration-danger="state == 'cancel'"
                />
                <button icon="fa-arrow-right" name="action_confirm" states="draft" string="Confirmed" type="object" />
            </tree>
        </field>
    </record>
    <record id="view_tms_advance_form" model="ir.ui.view">
        <field name="name">tms.advance.form</field>
        <field name="model">tms.advance</field>
        <field name="arch" type="xml">
            <form string="Advances">
                <header>
                    <button
                        name="action_confirm"
                        icon="fa-thumbs-up"
                        class="oe_highlight"
                        states="draft"
                        string="Confirmed"
                        type="object"
                    />
                    <button
                        name="action_register_payment"
                        icon="fa-usd"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('payment_state', '=', 'paid')]}"
                        string="Register Payment"
                        type="object"
                    />
                    <button
                        name="action_cancel_draft"
                        icon="fa-reply"
                        states="cancel"
                        string="Set to Draft"
                        type="object"
                    />
                    <button
                        name="action_cancel"
                        icon="fa-times"
                        states="draft,confirmed"
                        string="Cancel"
                        type="object"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_open_related_moves"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            string="Related Moves"
                            attrs="{'invisible': [('move_id', '=', False)]}"
                        />
                        <button
                            name="action_open_payments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            string="Payments"
                            attrs="{'invisible': [('payment_ids', '=', [])]}"
                        />
                        <field name="move_id" invisible="1" />
                        <field name="payment_ids" invisible="1" />
                    </div>
                    <widget name="web_ribbon" title="Paid" attrs="{'invisible': [('payment_state', '!=', 'paid')]}" />
                    <widget
                        name="web_ribbon"
                        title="Partial"
                        bg_color="bg-warning"
                        attrs="{'invisible': [('payment_state', '!=', 'partial')]}"
                    />
                    <widget
                        name="web_ribbon"
                        title="Not Paid"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('payment_state', '!=', 'not_paid')]}"
                    />
                    <field name="payment_state" invisible="1" />
                    <div class="oe_title">
                        <span class="o_form_label">Advance</span>
                        <h1 class="mt0">
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                                name="travel_id"
                                attrs="{'readonly':[('state', '!=', 'draft')]}"
                                domain="[('state', 'not in', ['cancel', 'closed', 'done'])]"
                                options="{'no_create': True}"
                            />
                            <field name="unit_id" />
                            <field name="driver_id" />
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state', '!=', 'draft')]}" />
                            <field
                                name="currency_id"
                                attrs="{'readonly':[('state', '!=', 'draft')]}"
                                groups="base.group_multi_currency"
                                options="{'no_create': True, 'no_open': True}"
                            />
                            <field
                                name="auto_expense"
                                widget="boolean_toggle"
                                attrs="{'readonly':[('state', '!=', 'draft')]}"
                            />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field
                                name="product_id"
                                attrs="{'readonly':[('state', '!=', 'draft')]}"
                                options="{'no_create': True}"
                            />
                            <field name="amount" attrs="{'readonly':[('state', '!=', 'draft')]}" />
                            <field name="amount_residual" attrs="{'invisible': [('amount_residual', '=', 0)]}" />
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" nolabel="1" />
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" placeholder="Share a message..." widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="open_view_tms_advance_form" model="ir.actions.act_window">
        <field name="name">Advances</field>
        <field name="res_model">tms.advance</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
