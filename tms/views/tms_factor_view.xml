<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tms_factor_tree" model="ir.ui.view">
        <field name="name">tms.factor.tree</field>
        <field name="model">tms.factor</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field invisible="1" name="category" />
                <field name="name" />
                <field name="factor_type" />
                <field name="factor" optional="show" />
                <field name="range_start" optional="hide" />
                <field name="range_end" optional="hide" />
                <field name="fixed_amount" optional="show" />
                <field name="mixed" optional="hide" />
            </tree>
        </field>
    </record>
    <record id="view_tms_factor_form" model="ir.ui.view">
        <field name="name">tms.factor.form</field>
        <field name="model">tms.factor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group
                            name="customer_information"
                            string="Customer Information"
                            attrs="{'invisible': [('category', '!=', 'customer')]}"
                        >
                            <field
                                name="partner_id"
                                attrs="{
                                    'invisible': [('category', '!=', 'customer')],
                                    'required': [('category', '=', 'customer')],
                                }"
                                options="{'no_create': True}"
                            />
                        </group>
                        <group
                            name="driver_information"
                            string="Driver Information"
                            attrs="{'invisible': [('category', '!=', 'driver')]}"
                        >
                            <field
                                name="driver_ids"
                                options="{'no_create': True}"
                                widget="many2many_avatar_employee"
                            />
                        </group>
                        <group>
                            <span
                                attrs="{'invisible': [('category', '!=', 'driver')]}"
                            >Drivers to apply this factor.<br
                                /> If you leave it empty, it will be applied to all drivers.</span>
                        </group>
                        <group attrs="{'invisible': [('category', '!=', 'customer')]}">
                            <field
                                name="departure_address_id"
                                attrs="{'required': [('category', '=', 'customer')]}"
                                domain="[('parent_id', '=', partner_id), ('type', '=', 'delivery'), ('id', '!=', arrival_address_id)]"
                                context="{'default_type': 'delivery', 'default_parent_id': partner_id, 'default_company_type': 'person'}"
                            />
                        </group>
                        <group attrs="{'invisible': [('category', '!=', 'customer')]}">
                            <field
                                name="arrival_address_id"
                                attrs="{'required': [('category', '=', 'customer')]}"
                                domain="[('parent_id', '=', partner_id), ('type', '=', 'delivery'), ('id', '!=', departure_address_id)]"
                                context="{'default_type': 'delivery', 'default_parent_id': partner_id, 'default_company_type': 'person'}"
                            />
                        </group>
                        <group string="Factor Information" name="factor_information">
                            <field name="factor_type" />
                            <field name="category" invisible="1" />
                            <field name="name" />
                            <field
                                attrs="{
                                    'invisible' :[('factor_type', 'in', ['travel','amount_driver'])],
                                    'required': [('factor_type', 'in', ['distance','weight','qty','volume','percent'])],
                                }"
                                name="factor"
                            />
                            <field
                                attrs="{
                                    'invisible': [('factor_type', 'in', ['travel', 'percent','amount_driver'])],
                                    'required': [('factor_type', 'in', ['distance','weight','qty','volume'])],
                                }"
                                name="range_start"
                            />
                            <field
                                attrs="{
                                    'invisible': [('factor_type', 'in', ['travel', 'percent', 'amount_driver'])],
                                    'required': [('factor_type', 'in', ['distance', 'weight', 'qty', 'volume'])],
                                }"
                                name="range_end"
                            />
                            <field
                                attrs="{'invisible' :[('factor_type', 'in', ['travel', 'amount_driver'])]}"
                                name="mixed"
                            />
                            <field
                                attrs="{'invisible' :[('mixed', '!=', True), '|', ('factor_type', '!=', 'travel'), ('mixed', '!=', False)]}"
                                name="fixed_amount"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page name="notes" string="Notes">
                            <field name="notes" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
