<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tms_factor_tree" model="ir.ui.view">
        <field name="name">tms.factor.tree</field>
        <field name="model">tms.factor</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree>
                <field invisible="1" name="category" />
                <field name="name" />
                <field name="factor_type" />
                <field name="factor" />
                <field name="range_start" />
                <field name="range_end" />
                <field name="fixed_amount" />
                <field name="mixed" />
            </tree>
        </field>
    </record>
    <record id="view_tms_factor_form" model="ir.ui.view">
        <field name="name">tms.factor.form</field>
        <field name="model">tms.factor</field>
        <field name="arch" type="xml">
            <form string="Factors">
                <sheet>
                    <group>
                        <group>
                            <field name="factor_type" />
                            <field invisible="True" name="category" />
                            <field name="name" />
                            <field
                                attrs="{'invisible' :[('factor_type', 'in', ('percent_driver','travel','amount_driver'))],'required': [('factor_type','in',('distance','weight','qty','volume','percent'))]}"
                                name="factor"
                            />
                            <field
                                attrs="{'invisible': [('factor_type', 'in', ('percent_driver', 'travel', 'percent','amount_driver'))], 'required': [('factor_type', 'in', ('distance','weight','qty','volume'))]}"
                                name="range_start"
                            />
                            <field
                                attrs="{'invisible': [('factor_type', 'in', ('percent_driver', 'travel', 'percent', 'amount_driver'))], 'required': [('factor_type', 'in', ('distance', 'weight', 'qty', 'volume'))]}"
                                name="range_end"
                            />
                            <field
                                attrs="{'invisible' :[('factor_type', 'in', ('travel', 'amount_driver'))]}"
                                name="mixed"
                            />
                            <field
                                attrs="{'invisible' :[('mixed', '!=', True), '|', ('factor_type', '!=', 'travel'), ('mixed', '!=', False)]}"
                                name="fixed_amount"
                            />
                            <field name="notes" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="open_view_tms_factor_form" model="ir.actions.act_window">
        <field name="name">TMS Factor</field>
        <field name="res_model">tms.factor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
