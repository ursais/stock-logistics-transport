<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_tms_route_search" model="ir.ui.view">
        <field name="name">tms.route.search</field>
        <field name="model">tms.route</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="active" />
            </search>
        </field>
    </record>
    <record id="view_tms_route_tree" model="ir.ui.view">
        <field name="name">tms.route.tree</field>
        <field name="model">tms.route</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="distance" />
                <field name="distance_loaded" />
                <field name="distance_empty" />
                <field name="travel_time" widget="float_time" />
            </tree>
        </field>
    </record>
    <record id="view_tms_route_form" model="ir.ui.view">
        <field name="name">tms.route.form</field>
        <field name="model">tms.route</field>
        <field name="arch" type="xml">
            <form string="Routes">
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <field name="active" invisible="1" />
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                    </group>
                    <group name="route">
                        <group name="route_left">
                            <field name="distance" />
                            <field name="distance_loaded" />
                        </group>
                        <group name="route_right">
                            <field name="travel_time" widget="float_time" />
                            <field name="distance_empty" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Driver Factor" name="driver_factor">
                            <field name="driver_factor_ids" context="{'default_category': 'driver'}">
                                <tree>
                                    <field name="sequence" widget="handle" />
                                    <field invisible="1" name="category" />
                                    <field name="name" />
                                    <field name="factor_type" />
                                    <field name="driver_ids" optional="show" widget="many2many_avatar_employee" />
                                    <field name="factor" optional="show" />
                                    <field name="range_start" optional="hide" />
                                    <field name="range_end" optional="hide" />
                                    <field name="fixed_amount" optional="show" />
                                    <field name="mixed" optional="hide" />
                                </tree>
                            </field>
                        </page>
                        <page string="Customer Factor" name="customer_factor">
                            <field name="customer_factor_ids" context="{'default_category': 'customer'}">
                                <tree>
                                    <field name="sequence" widget="handle" />
                                    <field name="partner_id" />
                                    <field name="departure_address_id" optional="hide" />
                                    <field name="arrival_address_id" optional="hide" />
                                    <field name="name" />
                                    <field name="factor_type" />
                                    <field name="factor" optional="show" />
                                    <field name="range_start" optional="hide" />
                                    <field name="range_end" optional="hide" />
                                    <field name="fixed_amount" optional="show" />
                                    <field name="mixed" optional="hide" />
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="open_view_tms_route_form" model="ir.actions.act_window">
        <field name="name">TMS Routes</field>
        <field name="res_model">tms.route</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
