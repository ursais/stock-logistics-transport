<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fleet_vehicle_insurance_view_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.insurance.view.tree</field>
        <field name="model">fleet.vehicle.insurance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="unit_id" />
                <field name="partner_id" />
                <field name="emission_date" />
                <field name="expiration_date" />
                <field name="days_to_expire" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="fleet_vehicle_insurance_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.insurance.view.form</field>
        <field name="model">fleet.vehicle.insurance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label for="name" class="oe_inline" string="Insurance Policy - " />
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="unit_id" />
                        </group>
                        <group>
                            <label for="emission_date" string="Validity" />
                            <div class="o_row">
                                <field
                                    name="emission_date"
                                    widget="daterange"
                                    options='{"related_end_date": "expiration_date"}'
                                />
                                <i class="fa fa-long-arrow-right mx-1" aria-label="Arrow icon" title="Arrow" />
                                <field
                                    name="expiration_date"
                                    widget="daterange"
                                    options='{"related_start_date": "emission_date"}'
                                />
                            </div>
                            <field name="days_to_expire" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="fleet_vehicle_insurance_action" model="ir.actions.act_window">
        <field name="name">Insurance Policy</field>
        <field name="res_model">fleet.vehicle.insurance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to add a new insurance policy.</p>
        </field>
    </record>
</odoo>
