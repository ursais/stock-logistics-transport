<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tms_travel_stage_view_search" model="ir.ui.view">
        <field name="name">tms.travel.stage.view.search</field>
        <field name="model">tms.travel.stage</field>
        <field name="arch" type="xml">
            <search>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]" />
            </search>
        </field>
    </record>
    <record id="tms_travel_stage_view_tree" model="ir.ui.view">
        <field name="name">tms.travel.stage.view.tree</field>
        <field name="model">tms.travel.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="state" />
                <field name="fold" />
            </tree>
        </field>
    </record>
    <record id="tms_travel_stage_view_form" model="ir.ui.view">
        <field name="name">tms.travel.stage.view.form</field>
        <field name="model">tms.travel.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <field name="active" invisible="1" />
                    <group>
                        <group>
                            <field name="name" />
                            <field name="state" />
                            <field name="sequence" />
                        </group>
                        <group>
                            <field name="fold" />
                        </group>
                        <label for="description" />
                        <field name="description" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tms_travel_stage_action" model="ir.actions.act_window">
        <field name="name">Travel Stages</field>
        <field name="res_model">tms.travel.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
