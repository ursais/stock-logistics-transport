                    <button
                        name="action_progress"
                        icon="fa-thumbs-up"
                        type="object"
                        string="Dispatch"
                        states="draft"
                        groups="tms.group_tms_traffic,tms.group_tms_expenses"
                        class="oe_highlight"
                    />
                    <button
                        name="action_done"
                        icon="fa-check-square"
                        type="object"
                        string="Finish"
                        states="progress"
                        groups="tms.group_tms_traffic,tms.group_tms_expenses"
                        class="oe_highlight"
                    />
