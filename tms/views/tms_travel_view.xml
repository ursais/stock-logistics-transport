                        name="action_cancel"
                        icon="fa-times"
                        type="object"
                        string="Cancel"
                        states="draft,progress"
                        groups="tms.group_tms_traffic,tms.group_tms_expenses"
                    />
                    <button
                        name="action_draft"
                        icon="fa-reply"
                        type="object"
                        string="Set to draft"
                        states="done,cancel"
                        groups="tms.group_tms_traffic,tms.group_tms_expenses"
