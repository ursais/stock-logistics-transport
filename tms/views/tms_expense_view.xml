<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tms_expense_tree" model="ir.ui.view">
        <field name="name">tms.expense.tree</field>
        <field name="model">tms.expense</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state=='cancel'" decoration-info="state=='approved'">
                <header>
                    <button name="action_register_payment" string="Register Payment" type="object" />
                </header>
                <field name="name" />
                <field name="date" />
                <field name="driver_id" />
                <field name="unit_id" />
                <field invisible="1" name="move_id" />
                <field
                    name="payment_state"
                    widget="badge"
                    decoration-danger="payment_state == 'not_paid'"
                    decoration-warning="payment_state == 'partial'"
                    decoration-success="payment_state == 'paid'"
                    optional="show"
                />
                <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-muted="state == 'approved'"
                    decoration-danger="state == 'cancel'"
                />
            </tree>
        </field>
    </record>
    <record id="view_tms_expense_form" model="ir.ui.view">
        <field name="name">tms.expense.form</field>
        <field name="model">tms.expense</field>
        <field name="arch" type="xml">
            <form string="Travel Expenses">
                <header>
                    <button
                        icon="fa-reply"
                        name="action_draft"
                        states="cancel"
                        string="Reset to draft"
                        type="object"
                    />
                    <button
                        class="oe_highlight"
                        icon="fa-check-square-o"
                        name="action_approved"
                        states="draft"
                        string="Approve"
                        type="object"
                    />
                    <button name="action_cancel" states="approved" string="Cancel" type="object" />
                    <button name="get_travel_info" states="draft" string="Update Expense" type="object" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_open_related_moves"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            string="Related Moves"
                            attrs="{'invisible': [('move_id', '=', False)]}"
                        />
                        <button
                            name="action_open_payments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            string="Payments"
                            attrs="{'invisible': [('payment_ids', '=', [])]}"
                        />
                        <field name="move_id" invisible="1" />
                        <field name="payment_ids" invisible="1" />
                    </div>
                    <widget name="web_ribbon" title="Paid" attrs="{'invisible': [('payment_state', '!=', 'paid')]}" />
                    <widget
                        name="web_ribbon"
                        title="Partial"
                        bg_color="bg-warning"
                        attrs="{'invisible': [('payment_state', '!=', 'partial')]}"
                    />
                    <widget
                        name="web_ribbon"
                        title="Not Paid"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('payment_state', '!=', 'not_paid')]}"
                    />
                    <field name="payment_state" invisible="1" />
                    <div class="oe_title">
                        <span class="o_form_label">Travel Expense</span>
                        <h1 class="mt0">
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                                attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}"
                                domain="[('fleet_type', '=', 'tractor')]"
                                name="unit_id"
                            />
                            <field attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}" name="driver_id" />
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}" />
                            <field
                                name="currency_id"
                                attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}"
                                groups="base.group_multi_currency"
                            />
                            <field name="company_id" groups="base.group_multi_company" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Resume">
                            <group>
                                <group>
                                    <separator string="Driver Expenses" />
                                    <field name="amount_salary" />
                                    <field name="amount_other_income" />
                                    <field name="amount_salary_discount" />
                                    <field name="amount_salary_retention" />
                                    <field name="amount_total_driver_expenses" />
                                    <separator string="Real Expenses" />
                                    <field name="amount_real_expense" />
                                    <field name="amount_tax_real" />
                                    <field name="amount_total_real" />
                                    <field name="amount_advance" />
                                    <field name="amount_advance_expense_balance" />
                                    <separator string="Total Driver Salary" />
                                    <field name="amount_salary_balance" />
                                    <separator string="Fuel Expenses" />
                                    <field name="amount_fuel" />
                                    <field name="amount_tax_fuel" />
                                    <field name="amount_total_fuel" />
                                    <separator string="Total Expenses" />
                                    <field name="amount_indirect_expense" />
                                    <field name="amount_total" />
                                </group>
                            </group>
                        </page>
                        <page string="Travels">
                            <field
                                name="travel_ids"
                                attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}"
                                domain="[('driver_id','=', driver_id), ('state','=', 'done'), ('unit_id', '=', unit_id)]"
                            />
                        </page>
                        <page string="Expense Lines">
                            <field
                                name="expense_line_ids"
                                attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}"
                                context="{'default_expense_id': active_id, 'group_by_line_type': 1}"
                                nolabel="1"
                            />
                        </page>
                        <page string="Advances">
                            <field name="advance_ids" />
                        </page>
                        <page string="Fuel Vouchers">
                            <field name="fuel_ids" />
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Notes ..." />>
                        </page>
                        <page string="Statistics">
                            <group nanem="distances" string="Distances">
                                <group name="planned" string="Planned">
                                    <field name='distance_loaded' />
                                    <field name='distance_empty' />
                                    <field
                                        name="distance_routes"
                                        attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}"
                                    />
                                    <field
                                        name="current_odometer"
                                        attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}"
                                    />
                                </group>
                                <group name="distances_real" string="Real">
                                    <field name='distance_loaded_real' />
                                    <field name='distance_empty_real' />
                                    <field
                                        name="distance_real"
                                        attrs="{'readonly':[('state','in', ['approved', 'cancel'])]}"
                                    />
                                </group>
                            </group>
                            <group string="Fuel">
                                <group>
                                    <field name="fuel_qty" />
                                    <field name="fuel_efficiency" />
                                    <field name="fuel_efficiency_real" />
                                </group>
                                <group>
                                   <field name="income_km" />
                                   <field name="expense_km" />
                                   <field name="percentage_km" widget="progressbar" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="view_tms_expense_filter" model="ir.ui.view">
        <field name="name">tms.expense.list.select</field>
        <field name="model">tms.expense</field>
        <field name="arch" type="xml">
            <search string="Search Expenses">
                <field name="name" />
                <field name="driver_id" />
                <field name="unit_id" />
                <field name="date" string="Expense date" />
                <filter name="draft" domain="[('state','=','draft')]" string="Draft" />
                <filter name="approved" domain="[('state','=','approved')]" string="Approved" />
                <filter name="not_paid" string="Unpaid" domain="[('payment_state', 'in', ('not_paid', 'partial'))]" />
                <filter name="paid" string="Paid" domain="[('payment_state', 'in', ('in_payment', 'paid'))]" />
                <filter name="driver" context="{'group_by':'driver_id'}" string="Driver" />
                <filter name="unit" context="{'group_by':'unit_id'}" string="Unit" />
                <filter name="state" context="{'group_by':'state'}" string="State" />
                <filter name="period" context="{'group_by':'date'}" string="Month" />
                <filter name="paid" context="{'group_by':'payment_state'}" string="Payment State" />
            </search>
        </field>
    </record>
    <record id="action_tms_expense_form" model="ir.actions.act_window">
        <field name="name">Travel Expenses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tms.expense</field>
        <field name="view_mode">tree,form</field>
        <field name="help">Travel Expenses</field>
    </record>
</odoo>
