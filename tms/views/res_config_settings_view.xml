<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tms</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div
                    class="app_settings_block"
                    data-string="TMS"
                    data-key="tms"
                    groups="tms.group_tms_manager"
                >
                    <h2>General Configuration</h2>
                    <div
                        class="row mt16 o_settings_container"
                        id="tms_general_configuration"
                    >
                        <div class="col-xs-12 col-md-6 o_setting_box" id="tms_driver_license_security_days">
                            <div class="o_setting_right_pane">
                                <label
                                    string="Security Days for Driver License"
                                    for="driver_license_security_days"
                                />
                                <field name="driver_license_security_days" />
                                <div class="text-muted">
                                    Set the number of days before the expiration date of the driver license to show a warning.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" id="tms_insurance_security_days">
                            <div class="o_setting_right_pane">
                                <label
                                    string="Security Days for Insurance"
                                    for="insurance_security_days"
                                />
                                <field name="insurance_security_days" />
                                <div class="text-muted">
                                    Set the number of days before the expiration date of the unit insurance to show a warning.
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Accounting Configuration</h2>
                    <div class="row mt16 o_settings_container" id="tms_account">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="advance_journal_id"/>
                                <field name="advance_journal_id" />
                                <div class="text-muted">
                                    Select the journal where the advance will be posted.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="expense_journal_id"/>
                                <field name="expense_journal_id" />
                                <div class="text-muted">
                                    Select the journal where the travel expense will be posted.
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>TMS Modules</h2>
                    <div
                        class="row mt16 o_settings_container"
                        id="tms_modules"
                    >
                        <div class="col-xs-12 col-md-6 o_setting_box" id="tms_operating_unit">
                            <div class="o_setting_left_pane">
                                <field name="module_tms_operating_unit" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label
                                    string="Enable Operating Unit"
                                    for="module_tms_operating_unit"
                                />
                                <div class="text-muted">
                                    Use Operating Units in TMS
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="action_tms_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'tms'}</field>
    </record>
</odoo>
