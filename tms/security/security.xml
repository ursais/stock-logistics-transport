        <field name="category_id" ref="tms_group_category" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
    </record>
    <record id="group_tms_expenses" model="res.groups">
        <field name="name">Expenses</field>
         <field name="implied_ids" eval="[(4, ref('group_tms_monitoring')), (4, ref('account.group_account_invoice'))]" />
         <field name="category_id" ref="tms_group_category" />
    </record>
    <record id="group_tms_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_tms_expenses')), (4, ref('group_tms_traffic_supervisor'))]" />
        <field name="category_id" ref="tms_group_category" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
    </record>
