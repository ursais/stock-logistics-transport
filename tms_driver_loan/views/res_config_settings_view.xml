<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tms</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="tms.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='tms_account']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="loan_journal_id" />
                        <field name="loan_journal_id" />
                        <div class="text-muted">
                            Select the journal where the driver loans will be posted.
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="loan_account_id" />
                        <field name="loan_account_id" />
                        <div class="text-muted">
                            Select the default account that will be used to record the loans made to drivers.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
