<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_tms_loan_tree" model="ir.ui.view">
        <field name="name">tms.loan.tree</field>
        <field name="model">tms.loan</field>
        <field name="arch" type="xml">
            <tree
                decoration-danger="state=='cancel'"
                decoration-muted="state=='closed'"
                decoration-success="state=='confirmed'"
            >
                <header>
                    <button name="action_register_payment" string="Register Payment" type="object" />
                </header>
                <field name="name" />
                <field name="date" />
                <field name="driver_id" />
                <field name="product_id" />
                <field name="amount" sum="Amount" />
                <field name="amount_residual_driver" sum="Balance" />
                <field
                    name="payment_state"
                    widget="badge"
                    decoration-danger="payment_state == 'not_paid'"
                    decoration-warning="payment_state == 'partial'"
                    decoration-success="payment_state == 'paid'"
                    optional="show"
                />
                <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-muted="state == 'confirmed'"
                    decoration-danger="state == 'cancel'"
                />
            </tree>
        </field>
    </record>
    <record id="view_tms_loan_form" model="ir.ui.view">
        <field name="name">tms.loan.form</field>
        <field name="model">tms.loan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_confirm"
                        icon="fa-check-square-o"
                        class="oe_highlight"
                        states="draft"
                        string="Confirm"
                        type="object"
                    />
                    <button
                        name="action_register_payment"
                        icon="fa-usd"
                        class="oe_highlight"
                        invisible="state != 'confirmed' or payment_state == 'paid'"
                        string="Register Payment"
                        type="object"
                    />
                    <button
                        name="action_cancel_draft"
                        icon="fa-reply"
                        states="cancel"
                        string="Set to Draft"
                        type="object"
                    />
                    <button
                        name="action_cancel"
                        icon="fa-times"
                        states="draft,confirmed"
                        string="Cancel"
                        type="object"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_open_related_moves"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            string="Related Moves"
                            invisible="not move_id"
                        />
                        <button
                            name="action_open_payments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                            string="Payments"
                            invisible="not payment_ids"
                        />
                        <field name="move_id" invisible="1" />
                        <field name="payment_ids" invisible="1" />
                    </div>
                    <widget name="web_ribbon" title="Paid" invisible="payment_state != 'paid'" />
                    <widget
                        name="web_ribbon"
                        title="Partial"
                        bg_color="bg-warning"
                        invisible="payment_state != 'partial'"
                    />
                    <widget
                        name="web_ribbon"
                        title="Not Paid"
                        bg_color="bg-danger"
                        invisible="payment_state != 'not_paid'"
                    />
                    <field name="payment_state" invisible="1" />
                    <div class="oe_title">
                        <span class="o_form_label">Driver Loan</span>
                        <h1 class="mt0">
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="loans">
                        <group name="loan_left">
                            <field
                                name="driver_id"
                                readonly="state != 'draft'"
                                options="{'no_create': True}"
                            />
                            <field
                                name="product_id"
                                readonly="state != 'draft'"
                                options="{'no_create': True}"
                            />
                            <field name="amount" readonly="state != 'draft'" />
                            <field name="amount_residual" invisible="amount_residual == 0" />
                            <field
                                name="amount_residual_driver"
                                invisible="amount_residual_driver == 0"
                            />
                        </group>
                        <group name="loan_right">
                            <field name="date" readonly="state != 'draft'" />
                            <field
                                name="currency_id"
                                readonly="state != 'draft'"
                                groups="base.group_multi_currency"
                                options="{'no_create': True, 'no_open': True}"
                            />
                            <field name="date_confirmed" invisible="not date_confirmed" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Loan Details" name="loan_details">
                            <group>
                                <group>
                                    <field name="discount_type" readonly="state != 'draft'" />
                                    <field name="discount_factor" readonly="state != 'draft'" />
                                    <field name="discount_method" readonly="state != 'draft'" />
                                </group>
                            </group>
                        </page>
                        <page
                            string="Expense Lines"
                            name="expense_lines"
                            invisible="not expense_line_ids"
                        >
                            <field name="expense_line_ids" nolabel="1">
                                <tree>
                                    <field name="date" />
                                    <field name="name" />
                                    <field name="expense_id" />
                                    <field name="amount_total" sum="Total" />
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1" placeholder="Notes..." />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_tms_loan_search" model="ir.ui.view">
        <field name="name">tms.loan.search</field>
        <field name="model">tms.loan</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" select="1" />
                <field name="driver_id" />
                <field name="product_id" />
                <field name="date" />
                <separator />
                <filter string="All" name="all" domain="['|', ('active', '=', False), ('active', '=', True)]" />
                <separator />
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]" />
                <separator />
                <filter name="draft" string="Draft" domain="[('state','=','draft')]" />
                <filter name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]" />
                <filter name="not_paid" string="Unpaid" domain="[('payment_state', 'in', ['not_paid', 'partial'])]" />
                <filter name="paid" string="Paid" domain="[('payment_state', 'in', ['in_payment', 'paid'])]" />
                <filter name="group_by_driver" string="Driver" context="{'group_by':'driver_id'}" />
                <filter name="group_by_product" string="Product" context="{'group_by':'product_id'}" />
                <filter name="group_by_state" string="State" context="{'group_by':'state'}" />
           </search>
        </field>
    </record>
    <record id="action_tms_loan" model="ir.actions.act_window">
        <field name="name">Drivers Loans</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tms.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_all': 1}</field>
    </record>
    <menuitem action="action_tms_loan" id="tms_menu_tms_loan" parent="tms.menu_tms_settings" sequence="90" />
</odoo>
